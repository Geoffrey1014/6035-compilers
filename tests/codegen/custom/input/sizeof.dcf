// 12) sizeof
//     res_word --> bool, int,
//     variable --> array object (no index offset), var object

extern printf();

void sizeofResWord() {
    // bool
    printf("sizeof bool = %d\n", (sizeof (bool)));

    // int
    printf("sizeof int = %d\n", (sizeof (int)));
}

void sizeofArray() {
    // array (int)
    int arrayInt[10];
    printf("sizeof arrayInt = %d\n", (sizeof (arrayInt)));
    
    // array (bool)
    bool arrayBool[10];
    printf("sizeof arrayBool = %d\n", (sizeof (arrayBool)));
}

void sizeofVariable() {
    // var (int)
    int varInt;
    varInt = 1;
    printf("sizeof varInt = %d\n", (sizeof varInt));
    
    // var (bool)
    bool varBool;
    varBool = true;
    printf("sizeof varBool = %d\n", (sizeof varBool)):
}

void main() {
    sizeofResWord();
    sizeofArray();
    sizeofVariable();
}