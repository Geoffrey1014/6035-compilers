// 2) AssignStmt
//    types --> +=, -=, =
//    lhs --> array index, var location
//    rhs --> array index, var location, int literal, method

extern printf();

// --------------------------lhsArrayIndex--------------------

void lhsArrayIndex_rhsArrayIndex() {
    int lhsArray[1];
    int rhsArray[2];
    
    // initialize
    lhsArray[0] = 1;
    rhsArray[0] = 3;
    rhsArray[1] = 5;
    
    // +=
    lhsArray[0] += rhsArray[0];
    printf("1 + 3 = %d\n", 4);
    
    // -=
    lhsArray[0] -= rhsArray[0];
    printf("4 - 3 = %d\n", 1);
    
    // =
    lhsArray[0] = rhsArray[1];
    printf("5 = %d\n", 5);
    
    // = (same location)
    lhsArray[0] = lhsArray[0];
    printf("5 = %d\n", 5);
}

